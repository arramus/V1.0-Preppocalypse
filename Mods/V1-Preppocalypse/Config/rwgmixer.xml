<configs>

	<!-- Preppo Town -->
	<!-- TINY -->
    <append xpath="/rwgmixer/world[@name='tiny']">	
		<property class="preppotown">
			<property name="count" value="1, 1, 2"/>
			<property name="tiles" value="5, 6"/>
		</property>
	</append>	
	<!-- SMALL -->
    <append xpath="/rwgmixer/world[@name='small']">
		<property class="preppotown">
			<property name="count" value="1, 1, 2"/>
			<property name="tiles" value="5, 6"/>
		</property>
	</append>
	<!-- MEDIUM -->
    <append xpath="/rwgmixer/world[@name='medium']">
		<property class="preppotown">
			<property name="count" value="1, 1, 2"/>
			<property name="tiles" value="5, 6"/>
		</property>
	</append>
	<!-- LARGE -->
    <append xpath="/rwgmixer/world[@name='large']">
		<property class="preppotown">
			<property name="count" value="1, 2, 3"/>
			<property name="tiles" value="5, 6"/>
		</property>
	</append>

	<!-- Old West Migration -->
	<set xpath="/rwgmixer/township[@name='oldwest']/property[@name='spawn_trader']/@value">true</set>
	<set xpath="/rwgmixer/township[@name='oldwest']/property[@name='spawn_gateway']/@value">true</set>
	<append xpath="/rwgmixer/township[@name='oldwest']/property[@name='biomes']/@value">,forest,burntforest,snow</append><!-- Expanding desert -->
	<set xpath="/rwgmixer/world[@name='tiny']/property[@class='oldwest']/property[@name='count']/@value">1, 2, 3</set>
	<set xpath="/rwgmixer/world[@name='tiny']/property[@class='oldwest']/property[@name='tiles']/@value">6, 12</set>
	<set xpath="/rwgmixer/world[@name='small']/property[@class='oldwest']/property[@name='count']/@value">2, 3, 4</set>
	<set xpath="/rwgmixer/world[@name='small']/property[@class='oldwest']/property[@name='tiles']/@value">6, 12</set>	
	<set xpath="/rwgmixer/world[@name='medium']/property[@class='oldwest']/property[@name='count']/@value">3, 4, 4</set>
	<set xpath="/rwgmixer/world[@name='medium']/property[@class='oldwest']/property[@name='tiles']/@value">6, 12</set>
	<set xpath="/rwgmixer/world[@name='large']/property[@class='oldwest']/property[@name='count']/@value">3, 4, 4</set>
	<set xpath="/rwgmixer/world[@name='large']/property[@class='oldwest']/property[@name='tiles']/@value">6, 16</set>
	<!-- Tiny 0 - 5000 RWG Fillers -->
	<set xpath="/rwgmixer/world[@name='tiny']/property[@class='forest_countrytown']/property[@name='tiles']/@value">9, 10</set> <!-- 6, 6 -->	
	<set xpath="/rwgmixer/world[@name='tiny']/property[@class='bforest_countrytown']/property[@name='tiles']/@value">8, 9</set> <!-- 5, 6 -->
	<set xpath="/rwgmixer/world[@name='tiny']/property[@class='bforest_town']/property[@name='tiles']/@value">9, 10</set> <!-- 6, 7 -->
	<set xpath="/rwgmixer/world[@name='tiny']/property[@class='countrytown']/property[@name='tiles']/@value">8, 9</set> <!-- 5, 6 -->
	<set xpath="/rwgmixer/world[@name='tiny']/property[@class='town']/property[@name='tiles']/@value">10, 11</set> <!-- 7, 8 -->
	<!-- Small 5000 - 7000 RWG Fillers -->
	<set xpath="/rwgmixer/world[@name='small']/property[@class='forest_countrytown']/property[@name='tiles']/@value">9, 10</set> <!-- 6, 6 -->	
	<set xpath="/rwgmixer/world[@name='small']/property[@class='bforest_countrytown']/property[@name='tiles']/@value">8, 9</set> <!-- 5, 6 -->
	<set xpath="/rwgmixer/world[@name='small']/property[@class='bforest_town']/property[@name='tiles']/@value">9, 10</set> <!-- 6, 7 -->
	<set xpath="/rwgmixer/world[@name='small']/property[@class='countrytown']/property[@name='tiles']/@value">8, 9</set> <!-- 5, 6 -->
	<set xpath="/rwgmixer/world[@name='small']/property[@class='town']/property[@name='tiles']/@value">10, 11</set> <!-- 7, 8 -->
	<!-- Medium 7000 - 10000 RWG Fillers -->
	<set xpath="/rwgmixer/world[@name='medium']/property[@class='forest_countrytown']/property[@name='tiles']/@value">9, 10</set> <!-- 6, 6 -->	
	<set xpath="/rwgmixer/world[@name='medium']/property[@class='bforest_countrytown']/property[@name='tiles']/@value">8, 9</set> <!-- 5, 6 -->
	<set xpath="/rwgmixer/world[@name='medium']/property[@class='bforest_town']/property[@name='tiles']/@value">9, 10</set> <!-- 6, 7 -->
	<set xpath="/rwgmixer/world[@name='medium']/property[@class='countrytown']/property[@name='tiles']/@value">8, 9</set> <!-- 5, 6 -->
	<set xpath="/rwgmixer/world[@name='medium']/property[@class='town']/property[@name='tiles']/@value">10, 11</set> <!-- 7, 8 -->
	<!-- Large 10000 - 16000 RWG Fillers -->
	<set xpath="/rwgmixer/world[@name='large']/property[@class='forest_countrytown']/property[@name='tiles']/@value">9, 10</set> <!-- 6, 6 -->	
	<set xpath="/rwgmixer/world[@name='large']/property[@class='bforest_countrytown']/property[@name='tiles']/@value">8, 9</set> <!-- 5, 6 -->
	<set xpath="/rwgmixer/world[@name='large']/property[@class='bforest_town']/property[@name='tiles']/@value">10, 11</set> <!-- 7, 8 -->
	<set xpath="/rwgmixer/world[@name='large']/property[@class='countrytown']/property[@name='tiles']/@value">8, 9</set> <!-- 5, 6 -->
	<set xpath="/rwgmixer/world[@name='large']/property[@class='town']/property[@name='tiles']/@value">10, 11</set> <!-- 7, 8 -->

	<!-- Town expansion to Pine Forest to reduce repetition -->	
	<append xpath="/rwgmixer/township[@name='town']/property[@name='biomes']/@value">,forest</append>

	<append xpath="/rwgmixer">
	
	<!-- Preppo Town Custom Tiles -->
	<township name="preppotown">
		<property name="spawn_trader" value="true"/>
		<property name="spawn_gateway" value="true"/>
		<property name="biomes" value="burntforest,desert,snow,wasteland"/>
	</township>
	
	<district name="preppotown">
		<property name="spawn_weight" value="1"/>
		<property name="required_township" value="preppotown"/>
		<property name="preview_color" value="0.25,0.25,0.25"/>
	</district>

	<!-- Old West Migration Custom Tiles -->
	<streettile name="rwg_tile_oldwest_corner_02">
		<property name="maxtiles" value="1"/>
		<property name="mintiles" value="1"/>
		<property name="maxdensity" value="120"/>
	</streettile>
	
	<streettile name="rwg_tile_oldwest_straight_02">
		<property name="maxtiles" value="1"/>
		<property name="mintiles" value="1"/>
		<property name="maxdensity" value="120"/>
	</streettile>

